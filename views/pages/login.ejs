<!DOCTYPE html>
<html>
<head>
  <title>AlwaysTrending - Login</title>
  <% include ../partials/header.ejs %>
</head>
<body>
<% include ../partials/nav.ejs %>

<!-- show any messages that come back with authentication -->
<% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
<% } %>

<div id="content">
  <!-- LOGIN FORM -->
  <form action="/login" 
        method="post">
    <div class="form-group">
      <label>Email</label>
      <input type="email"
             name="email"
             placeholder="Email"
             required
             class="form-control">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" 
             name="password"
             placeholder="Password"
             required
             class="form-control">
    </div>
    <button type="submit"
            class="btn btn-primary">Log in</button>
    <hr />
    <p>Need an account? <a href="/signup">Sign up</a></p>
  </form>
</div>
